<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             x:Class="Patuti.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <skia:SKCanvasView Grid.Row="0" x:Name="canvasView" PaintSurface="canvasView_PaintSurface" />
        <StackLayout Grid.Row="1" Orientation="Horizontal">
            <Button Text="Up" Clicked="OnUpClicked" />
            <Button Text="Down" Clicked="OnDownClicked" />
            <Button Text="Left" Clicked="OnLeftClicked" />
            <Button Text="Right" Clicked="OnRightClicked" />
        </StackLayout>
    </Grid>

</ContentPage>
